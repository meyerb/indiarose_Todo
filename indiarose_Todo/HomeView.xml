<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">>
<Resources xmlns:converters="using Storm.Mvvm.Converters">
  <DataTemplate Key="SizeTemplate">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
      <Button android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                text="{Binding Title}"
    />
    </LinearLayout>
  </DataTemplate>
</Resources>

  <BindableListView android:layout_width="150dip"
             android:layout_height="wrap_content"
             adapter="{Binding Todos, Template={Resource SizeTemplate}}" />
  <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Add a new Todo"
            Click="{Binding ButtonCommand}"/>
  </LinearLayout>